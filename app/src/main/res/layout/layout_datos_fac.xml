<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomDatosContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_backgroup"
    android:orientation="vertical">

    <TextView
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:background="@drawable/iconito"
android:layout_marginLeft="155dp"
        android:layout_marginTop="2dp"
        android:gravity="center"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:textColor="@color/black"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Administrar Contribuyentes"
            android:textStyle="bold"></androidx.appcompat.widget.AppCompatTextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contenedorContribuyentes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:listitem="@layout/item_contribuyentes"
            android:focusableInTouchMode="true"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContri"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/anadir"
            android:paddingTop="15dp"
            android:text="AÃ±adir Contribuyente"
            android:textColor="@color/pinkColor"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/search_edittext_background"
            />
    </LinearLayout>



</LinearLayout>