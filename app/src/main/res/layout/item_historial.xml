<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="390dp"
    android:layout_height="120dp"
    android:layout_marginStart="4dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="100dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="390dp"
        android:layout_height="120dp"
        android:background="@color/white"
        android:paddingStart="14dp"
        android:paddingEnd="4dp"
        android:paddingBottom="10dp">


        <ImageView
            android:id="@+id/imagen_historial"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.228"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/txt_nro_historial"
            android:layout_width="200dp"
            android:layout_height="17dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="Combo de Limpieza"
            android:textColor="@color/textColorPrimary2"
            android:textSize="14sp"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.086" />

        <TextView
            android:id="@+id/txt_fecha_historial"
            android:layout_width="200dp"
            android:layout_height="15dp"

            android:maxLines="1"
            android:text="$ 5.98"
            android:textColor="#00b347"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_nro_historial"
            app:layout_constraintVertical_bias="0.12" />

        <TextView
            android:id="@+id/txt_total_historial"
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:maxLines="1"
            android:text="$ 5.98"
            android:textColor="@color/textColorSecondary"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_fecha_historial"
            app:layout_constraintVertical_bias="0.23000002" />

        <TextView
            android:id="@+id/txt_estado_histrial"
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:maxLines="1"
            android:text=" 5.98"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_historial"
            app:layout_constraintVertical_bias="0.35000002" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>